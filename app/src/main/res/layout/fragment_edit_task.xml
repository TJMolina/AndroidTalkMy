<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.taskEdit.EditTaskFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolBar"
        style="@style/header"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:padding="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/containerLogo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toStartOf="@id/toolsContainer"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@id/toolBar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TalkMy!"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/toolsContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="@+id/toolBar"
            app:layout_constraintStart_toEndOf="@id/containerLogo">

            <Button
                android:id="@+id/btnPageUrl"
                android:contentDescription="@string/toolPageUrl_ES"
                android:layout_width="34dp"
                android:layout_height="40dp"
                android:paddingRight="0dp"
                android:paddingLeft="6dp"
                android:backgroundTint="@color/primary"
                app:cornerRadius="50dp"
                app:icon="@drawable/ic_cloud"
                app:iconSize="25dp"
                app:iconTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <Button
                android:id="@+id/ivSave"
                android:contentDescription="@string/toolSaveInfo_ES"
                android:layout_width="34dp"
                android:layout_height="40dp"
                android:paddingRight="0dp"
                android:paddingLeft="6dp"
                android:backgroundTint="@color/primary"
                app:cornerRadius="50dp"
                app:icon="@drawable/ic_save"
                app:iconSize="25dp"
                app:iconTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/etTask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/white"
        android:gravity="start"
        android:hint="@string/editTaskHint_ES"
        android:padding="8dp"
        android:paddingBottom="100dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayoutCompat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnPlay"
            style="@style/circleButton"
            android:layout_width="63dp"
            android:layout_height="70dp"
            android:paddingLeft="9dp"
            android:paddingRight="0dp"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_play"
            app:iconSize="50dp"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
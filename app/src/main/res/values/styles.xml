<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="largeButton">
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="circleButton">
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="labelColor" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="header" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Theme.API_Splash_Screen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splahsColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_talkmy</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.TalkMy</item>
    </style>

    <style name="title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>